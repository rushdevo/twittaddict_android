<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AvatarName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">80dip</item>
        <item name="android:padding">5dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">10px</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="AvatarContainer">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/bubble</item>
		<item name="android:padding">5dip</item>
		<item name="android:layout_margin">5dip</item>
    </style>
    <style name="AvatarView">
	    <item name="android:layout_width">48px</item>
	    <item name="android:layout_height">48px</item>
    </style>
    <style name="TweetContainer">
    	<item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_margin">5dip</item>
	    <item name="android:padding">10dip</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">@drawable/bubble</item>
	    <item name="android:textColor">@color/grey</item>
	    <item name="android:textSize">12px</item>
    </style>
</resources>