<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_repeat"
    >
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_height="wrap_content"
    	android:layout_width="fill_parent"
    	android:layout_margin="10dip" >
		<TextView
			android:id="@+id/timer"
		    android:layout_width="40dip" 
		    android:layout_height="40dip"
		    android:textSize="22dip"
		    android:gravity="center"
		    android:textColor="@color/dark_blue"
		    android:text="@string/start_time"
		    android:background="@drawable/hourglass"
		    />
		<LinearLayout
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:gravity="right|center_vertical">
			<ImageView
				android:id="@+id/correct_marker"
				android:layout_width="20dip"
				android:layout_height="20dip"
				android:gravity="center"
				android:layout_marginRight="10dip" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="22dip"
				android:gravity="right|center_vertical"
				android:textColor="@color/dark_blue"
				android:text="@string/score"
				/>
			<TextView
				android:id="@+id/score_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="22dip"
				android:paddingLeft="10dip"
				android:textColor="@color/grey"
				android:gravity="center_vertical"
				android:text="@string/start_score"
				/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:visibility="gone"
		android:id="@+id/tweet_question_container">
		<TextView
			android:id="@+id/tweet_container"
			style="@style/TweetContainer" />
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="bottom|center_horizontal">
			<LinearLayout
				android:id="@+id/three_users_container"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal">
				<LinearLayout style="@style/AvatarContainer">
					<ImageView
						android:id="@+id/user1"
						style="@style/AvatarView"
					/>
					<TextView
						android:id="@+id/user1Name"
					    style="@style/AvatarName" />
				</LinearLayout>
				<LinearLayout style="@style/AvatarContainer">
					<ImageView
						android:id="@+id/user2"
						style="@style/AvatarView"
					/>
					<TextView
						android:id="@+id/user2Name"
					    style="@style/AvatarName" />
				</LinearLayout>
				<LinearLayout style="@style/AvatarContainer">
					<ImageView
						android:id="@+id/user3"
						style="@style/AvatarView"
					/>
					<TextView
						android:id="@+id/user3Name"
					    style="@style/AvatarName" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:visibility="gone"
		android:id="@+id/user_question_container">
		<TextView
			android:id="@+id/tweet1_container"
		    style="@style/TweetContainer" />
		<TextView
			android:id="@+id/tweet2_container"
			style="@style/TweetContainer" />
		<TextView
			android:id="@+id/tweet3_container"
		    style="@style/TweetContainer" />
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="bottom|center_horizontal">
			<LinearLayout
				android:id="@+id/one_user_container"
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal">
				<LinearLayout style="@style/AvatarContainer">
					<ImageView
						android:id="@+id/user"
						style="@style/AvatarView"
					/>
					<TextView
						android:id="@+id/userName"
					    style="@style/AvatarName" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
