<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_repeat"
    >
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_height="wrap_content"
    	android:layout_width="wrap_content"
    	android:background="@drawable/hourglass" >
		<TextView
			android:id="@+id/timer"
		    android:layout_width="40px" 
		    android:layout_height="40px"
		    android:textSize="22px"
		    android:gravity="center"
		    android:textColor="@color/grey"
		    android:text="@string/start_time"
		    />
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:visibility="gone"
		android:id="@+id/tweet_question_container">
		<TextView
			android:id="@+id/tweet_container"
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:minHeight="80dip"
		    android:layout_margin="10dip"
		    android:padding="10dip"
		    android:gravity="center_vertical"
		    android:background="@color/white"
		    android:textColor="@color/grey"
		    />
		<LinearLayout
			android:id="@+id/three_users_container"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:background="@color/white"
		    	android:textColor="@color/grey"
		    	android:padding="5dip">
				<ImageView
					android:id="@+id/user1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
				/>
			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:background="@color/white"
		    	android:textColor="@color/grey"
		    	android:padding="5dip">
				<ImageView
					android:id="@+id/user2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
				/>
			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:background="@color/white"
		    	android:textColor="@color/grey"
		    	android:padding="5dip">
				<ImageView
					android:id="@+id/user3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
				/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:visibility="gone"
		android:id="@+id/user_question_container">
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<TextView
				android:id="@+id/tweet1_container"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:minHeight="80dip"
			    android:layout_margin="10dip"
			    android:padding="10dip"
			    android:gravity="center_vertical"
			    android:background="@color/white"
			    android:textColor="@color/grey"
			    />
			<ImageView
				android:id="@+id/tweet1_answered"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone" />
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<TextView
				android:id="@+id/tweet2_container"
				android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:minHeight="80dip"
			    android:layout_margin="10dip"
			    android:padding="10dip"
			    android:gravity="center_vertical"
			    android:background="@color/white"
			    android:textColor="@color/grey"
			    />
			<ImageView
				android:id="@+id/tweet2_answered"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone" />
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<TextView
				android:id="@+id/tweet3_container"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content"
			    android:minHeight="80dip"
			    android:layout_margin="10dip"
			    android:padding="10dip"
			    android:gravity="center_vertical"
			    android:background="@color/white"
			    android:textColor="@color/grey"
			    />
			<ImageView
				android:id="@+id/tweet3_answered"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/one_user_container"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal">
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:background="@color/white"
		    	android:textColor="@color/grey"
		    	android:padding="5dip">
				<ImageView
					android:id="@+id/user"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
				/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
